{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    ".next/types/**/*.ts",
    "./src/env.mjs"
  ],
  "exclude": ["node_modules", ".next"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "test": ["test/*"]
    },
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
