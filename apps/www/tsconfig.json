{
  "extends": "@chia/tsconfig/base.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "allowArbitraryExtensions": true
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "vitest.config.mts.timestamp-*.mjs"]
}
