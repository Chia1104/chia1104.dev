{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": ["**/*.graphql"]
  },
  "projects": {
    "@chia/db": {
      "type": "library",
      "root": "../../packages/db",
      "entryFile": "index",
      "sourceRoot": "../../packages/db/src",
      "compilerOptions": {
        "tsConfigPath": "../../packages/db/tsconfig.lib.json"
      }
    }
  }
}
