{
  "$schema": "https://json.schemastore.org/package",
  "name": "chia1104.dev",
  "version": "2.0.0",
  "private": true,
  "sideEffects": false,
  "license": "MIT",
  "author": {
    "name": "Chia1104",
    "email": "yuyuchia7423@gmail.com",
    "url": "https://github.com/chia1104"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*",
    "tests/*",
    "scripts/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "build:www": "turbo run build --filter www...",
    "build:dash": "turbo run build --filter dash...",
    "build:backend": "turbo run build --filter backend...",
    "dev": "turbo run dev --parallel",
    "dev:turbo": "turbo run dev:turbo",
    "dev:www": "turbo run dev --filter www...",
    "dev:dash": "turbo run dev --filter dash...",
    "dev:backend": "turbo run dev --filter backend...",
    "start": "turbo run start --parallel",
    "start:www": "turbo run start --filter www",
    "start:dash": "turbo run start --filter dash",
    "start:backend": "turbo run start --filter backend",
    "lint": "turbo run lint --parallel",
    "format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "type:check": "turbo run type:check --parallel",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean --parallel",
    "test": "turbo run test --parallel",
    "test:watch": "turbo run test:watch --parallel",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push --parallel",
    "db:init": "turbo run db:init --parallel",
    "db:seed": "turbo run db:seed --parallel",
    "test:e2e": "turbo run test:e2e",
    "next-sitemap": "turbo run next-sitemap --parallel",
    "seed": "turbo run db:seed --filter seed"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.4.9",
    "@playwright/test": "^1.35.1",
    "@total-typescript/ts-reset": "0.4.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-next": "^13.4.6",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.10.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-tailwindcss": "3.13.0",
    "happy-dom": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "shell-quote": "^1.8.1",
    "ts-node": "^10.9.1",
    "turbo": "1.10.7",
    "typescript": "^5.1.3",
    "vitest": "^0.33.0"
  },
  "engines": {
    "node": ">=18.*"
  },
  "packageManager": "pnpm@8.6.6",
  "dependencies": {
    "dayjs": "^1.11.8",
    "superjson": "1.12.4",
    "zod": "^3.21.4"
  }
}
