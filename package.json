{
  "$schema": "https://json.schemastore.org/package",
  "name": "chia1104.dev",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint --parallel",
    "format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "type:check": "turbo run type:check",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:e2e": "turbo run test:e2e",
    "e2e:chrome": "turbo run e2e:chrome",
    "e2e:firefox": "turbo run e2e:firefox",
    "e2e:edge": "turbo run e2e:edge",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:init": "turbo run db:init"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.3.4",
    "@total-typescript/ts-reset": "0.4.2",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-next": "^13.3.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.9.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-tailwindcss": "3.11.0",
    "husky": "^8.0.3",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "shell-quote": "^1.8.1",
    "turbo": "1.9.3",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "engines": {
    "node": ">=18.*"
  },
  "packageManager": "pnpm@8.3.1",
  "dependencies": {
    "zod": "^3.21.4"
  }
}
