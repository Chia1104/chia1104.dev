{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "es5",
  "bracketSameLine": true,
  "ignorePatterns": [
    "legacy",
    "turbo/generators/templates",
    "node_modules",
    ".pnp",
    ".pnp.js",
    "coverage",
    "cypress/videos",
    "cypress/screenshots",
    "cypress/downloads",
    ".next/",
    "out/",
    "build",
    ".DS_Store",
    "*.pem",
    "npm-debug.log*",
    "yarn-debug.log*",
    "yarn-error.log*",
    ".pnpm-debug.log*",
    ".env",
    ".env.local",
    ".env.development.local",
    ".env.test.local",
    ".env.production.local",
    ".turbo",
    "dist",
    ".dist",
    "vscode",
    ".vscode",
    ".idea",
    ".map.ts"
  ],
  "experimentalSortImports": {
    "groups": [
      ["side-effect", "style"],
      ["builtin"],
      ["react", "next"],
      ["external"],
      ["chiastack", "chia"],
      ["internal"],
      ["parent"],
      ["sibling"],
      ["index"],
      "unknown"
    ],
    "customGroups": [
      {
        "groupName": "react",
        "elementNamePattern": ["react"]
      },
      {
        "groupName": "next",
        "elementNamePattern": ["next"]
      },
      {
        "groupName": "chia",
        "elementNamePattern": ["@chia/"]
      },
      {
        "groupName": "chiastack",
        "elementNamePattern": ["@chiastack/"]
      }
    ]
  },
  "experimentalTailwindcss": {
    "attributes": ["class", "className"],
    "functions": ["clsx", "cn"],
    "preserveWhitespace": true
  }
}
