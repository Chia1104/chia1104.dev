{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chia/auth",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "react-server": "./src/client.rsc.ts",
      "default": "./src/client.ts"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "default": "./src/utils.ts"
    },
    "./env": {
      "types": "./src/env.ts",
      "default": "./src/env.ts"
    },
    "./env.client": {
      "types": "./src/env.client.ts",
      "default": "./src/env.client.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules dist .cache",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type:check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "auth-schema:generate": "SKIP_ENV_VALIDATION=1 pnpm dlx @better-auth/cli generate --config src/index.ts"
  },
  "dependencies": {
    "@chia/db": "workspace:*",
    "@chia/kv": "workspace:*",
    "@chia/ui": "workspace:*",
    "@chia/utils": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "better-auth": "^1.4.2",
    "client-only": "catalog:",
    "dayjs": "catalog:",
    "resend": "^6.5.2",
    "server-only": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@chia/eslint-config": "workspace:*",
    "@chia/tsconfig": "workspace:*",
    "eslint": "catalog:eslint",
    "typescript": "catalog:"
  }
}
