{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chia/auth",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "react-server": "./src/client.rsc.ts",
      "default": "./src/client.ts"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "default": "./src/utils.ts"
    },
    "./env": {
      "types": "./src/env.ts",
      "default": "./src/env.ts"
    },
    "./env.client": {
      "types": "./src/env.client.ts",
      "default": "./src/env.client.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules dist .cache",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "type:check": "tsc --noEmit",
    "auth-schema:generate": "SKIP_ENV_VALIDATION=1 pnpm dlx @better-auth/cli generate --config scripts/auth-cli.ts"
  },
  "dependencies": {
    "@better-auth/passkey": "catalog:better-auth",
    "@chia/db": "workspace:*",
    "@chia/kv": "workspace:*",
    "@chia/ui": "workspace:*",
    "@chia/utils": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "better-auth": "catalog:better-auth",
    "client-only": "catalog:",
    "dayjs": "catalog:",
    "resend": "^6.8.0",
    "server-only": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@chiastack/tsconfig": "catalog:chiastack",
    "drizzle-kit": "catalog:drizzle",
    "typescript": "catalog:"
  }
}
