{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chia/db",
  "version": "0.0.0",
  "private": true,
  "types": "./src/index.ts",
  "main": "./src/index.ts",
  "scripts": {
    "db:start": "docker-compose up -d",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "type:check": "tsc --noEmit",
    "clean": "git clean -xdf .turbo node_modules",
    "db:check": "node --import=tsx --env-file=../../.env.global check.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.31.2",
    "pg": "^8.12.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@auth/core": "^0.32.0",
    "@chia/eslint-config": "workspace:*",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.22.7",
    "tsconfig": "workspace:*"
  }
}
