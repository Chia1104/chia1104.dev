{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chia/db",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "types": "./dist/index.d.mts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "db:generate": "drizzle-kit generate:pg",
