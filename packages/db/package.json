    "db:studio": "drizzle-kit studio",
    "clean": "git clean -xdf .turbo node_modules"
  },
  "dependencies": {
    "drizzle-orm": "^0.28.6",
    "postgres": "^3.4.1"
  },
  "devDependencies": {
    "@auth/core": "^0.18.0",
    "drizzle-kit": "^0.19.13",
    "tsconfig": "0.0.0"
  }
}
