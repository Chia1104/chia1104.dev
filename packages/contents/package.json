{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chia/contents",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./content-context": {
      "types": "./src/content.context.ts",
      "default": "./src/content.context.ts"
    },
    "./content": {
      "types": "./src/content.ts",
      "default": "./src/content.tsx"
    },
    "./content.rsc": {
      "types": "./src/content.rsc.ts",
      "default": "./src/content.rsc.tsx"
    },
    "./mdx-components": {
      "types": "./src/mdx-components.ts",
      "default": "./src/mdx-components.tsx"
    },
    "./services": {
      "types": "./src/services.ts",
      "default": "./src/services.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules dist .cache",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type:check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@chia/db": "workspace:*",
    "@chia/ui": "workspace:*",
    "@chia/utils": "workspace:*",
    "@fumadocs/mdx-remote": "catalog:",
    "@heroui/react": "2.7.2",
    "@mdx-js/react": "^3.1.0",
    "@theguild/remark-mermaid": "^0.2.0",
    "fumadocs-core": "catalog:",
    "fumadocs-mdx": "catalog:",
    "fumadocs-ui": "catalog:",
    "katex": "^0.16.21",
    "next": "15.1.7",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@chia/eslint-config": "workspace:*",
    "@chia/tsconfig": "workspace:*",
    "@types/mdx": "^2.0.13",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "eslint": "catalog:",
    "typescript": "catalog:"
  }
}
