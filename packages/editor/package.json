{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chia/editor",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./novel": {
      "types": "./src/novel/index.ts",
      "default": "./src/novel/index.tsx"
    },
    "./novel/extensions": {
      "types": "./src/novel/extensions.ts",
      "default": "./src/novel/extensions.tsx"
    },
    "./ai/generate": {
      "types": "./src/ai/generate.ts",
      "default": "./src/ai/generate.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules dist",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type:check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@chia/ui": "workspace:*",
    "@chia/utils": "workspace:*",
    "@nextui-org/react": "2.4.8",
    "@tiptap/core": "^2.10.2",
    "@tiptap/extension-code-block-lowlight": "^2.10.2",
    "@tiptap/html": "^2.10.2",
    "@tiptap/starter-kit": "^2.10.2",
    "class-variance-authority": "^0.7.1",
    "lowlight": "^3.1.0",
    "lucide-react": "^0.460.0",
    "next": "15.0.3",
    "novel": "^0.5.0",
    "openai": "^4.73.1",
    "react": "catalog:react19",
    "tiptap-markdown": "^0.8.10"
  },
  "devDependencies": {
    "@chia/eslint-config": "workspace:*",
    "@chia/tsconfig": "workspace:*",
    "@types/react": "catalog:react19",
    "eslint": "catalog:",
    "typescript": "catalog:"
  }
}
