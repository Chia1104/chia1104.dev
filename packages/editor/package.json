{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chia/editor",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./*": {
      "types": "./src/*.tsx",
      "default": "./src/*.tsx"
    }
  },
  "scripts": {
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "type:check": "tsc --noEmit",
    "clean": "git clean -xdf .turbo node_modules dist .cache",
    "ui-add": "pnpm dlx shadcn@latest add"
  },
  "dependencies": {
    "@chia/ui": "workspace:*",
    "@chia/utils": "workspace:*",
    "@platejs/basic-nodes": "catalog:platejs",
    "class-variance-authority": "^0.7.1",
    "platejs": "catalog:platejs"
  },
  "devDependencies": {
    "@chiastack/tsconfig": "catalog:chiastack",
    "@types/react": "catalog:react-is",
    "@types/react-dom": "catalog:react-is",
    "tailwindcss": "catalog:tailwindcss",
    "typescript": "catalog:"
  }
}
