{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "/apps/service",
      "/packages/db",
      "/packages/utils",
      "/packages/auth-core",
      "/infra/railway/service.json",
      "package.json"
    ],
    "dockerfilePath": "Dockerfile.node-service"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
