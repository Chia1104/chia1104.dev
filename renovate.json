{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies", "renovate"],
  "rebaseWhen": "conflicted",
  "rangeStrategy": "bump",
  "ignorePaths": ["legacy/service/package.json"],
  "packageRules": [
    {
      "groupName": "eslint",
      "matchPackageNames": ["/eslint/", "/eslint-*/", "/@types/eslint/"]
    },
    {
      "groupName": "prettier",
      "matchPackageNames": ["/prettier/", "/prettier-*/", "/@types/prettier/"]
    },
    {
      "groupName": "react",
      "matchPackageNames": [
        "/react/",
        "/react-dom/",
        "/@types/react/",
        "/@types/react-dom/"
      ]
    },
    {
      "groupName": "trpc",
      "matchPackageNames": ["/@trpc/*/"]
    },
    {
      "groupName": "typescript-eslint",
      "matchPackageNames": ["/@typescript-eslint/*/"]
    },
    {
      "groupName": "fumadocs",
      "matchPackageNames": ["/fumadocs-*/"]
    },
    {
      "groupName": "tiptap",
      "matchPackageNames": ["/@tiptap/*/"]
    },
    {
      "groupName": "plate",
      "matchPackageNames": ["/@udecode/plate-*/"]
    },
    {
      "enabled": false,
      "matchPackageNames": [
        "/^@chia/*/",
        "/@chia/ui/",
        "/@chia/utils/",
        "/@chia/api/",
        "/@chia/db/",
        "/@chia/auth/",
        "/tsconfig/",
        "/node/",
        "/go/"
      ]
    },
    {
      "groupName": "playwright",
      "matchPackageNames": [
        "/^@playwright//",
        "/^mcr.microsoft.com/playwright/"
      ]
    },
    {
      "groupName": "Hono",
      "groupSlug": "hono",
      "matchPackageNames": ["hono", "honox", "@hono{/,}**"]
    }
  ],
  "updateInternalDeps": true
}
