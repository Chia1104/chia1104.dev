{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies", "renovate"],
  "rebaseWhen": "conflicted",
  "ignoreDeps": [
    "node"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@chiastack/", "ui", "utils", "api", "db", "auth", "tsconfig"],
      "enabled": false
    }
  ],
  "updateInternalDeps": true
}
