{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "/apps/www",
      "/packages/ui",
      "/packages/utils",
      "/packages/meta",
      "/packages/db",
      "/toolings/tailwind",
      "/toolings/deployment/railway/www.json",
      "package.json"
    ],
    "dockerfilePath": "./apps/www/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
