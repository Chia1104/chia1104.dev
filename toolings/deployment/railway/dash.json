{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "/apps/dash",
      "/packages/*",
      "/toolings/tailwind",
      "/toolings/deployment/railway/dash.json",
      "package.json"
    ],
    "dockerfilePath": "./apps/dash/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
